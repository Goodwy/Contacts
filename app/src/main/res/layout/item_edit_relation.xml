<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_relation_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/contact_relation_type"
        android:layout_width="@dimen/contact_edit_type_width"
        android:layout_height="@dimen/contact_edit_height"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical|end"
        android:maxLines="2"
        android:ellipsize="end"
        android:minWidth="70dp"
        android:paddingStart="@dimen/contact_padding_left"
        android:paddingEnd="@dimen/medium_margin"
        android:textSize="@dimen/normal_text_size"
        tools:text="@string/label" />

    <ImageView
        android:id="@+id/dividerVerticalContactRelation"
        android:layout_width="1px"
        android:layout_height="@dimen/contact_edit_vertical_divider_height"
        android:layout_toEndOf="@+id/contact_relation_type"
        android:layout_centerVertical="true"
        android:alpha="0.2"
        android:background="@drawable/divider_settings"
        android:contentDescription="@null" />

    <com.goodwy.commons.views.MyEditText
        android:id="@+id/contactRelation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_edit_height"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/contactRelationSelectContact"
        android:layout_toEndOf="@+id/contact_relation_type"
        android:background="@null"
        android:hint="@string/relation_hint_g"
        android:inputType="textCapWords"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="@dimen/medium_margin"
        android:paddingEnd="@dimen/medium_margin"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/bigger_text_size" />

    <ImageView
        android:id="@+id/contactRelationSelectContact"
        android:layout_width="@dimen/edit_contact_add_icon"
        android:layout_height="@dimen/edit_contact_add_icon"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/contact_relation_remove"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/smaller_margin"
        android:foreground="@drawable/button_round_pressed"
        android:contentDescription="@string/choose_contact"
        android:alpha="0.8"
        android:src="@drawable/ic_person_rounded_scaled" />

    <ImageView
        android:id="@+id/contact_relation_remove"
        android:layout_width="@dimen/edit_contact_add_icon"
        android:layout_height="@dimen/edit_contact_add_icon"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/contact_padding_left"
        android:layout_marginBottom="@dimen/medium_margin"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/red_missed"
        android:foreground="@drawable/button_round_pressed"
        android:contentDescription="@string/remove"
        android:padding="@dimen/medium_margin"
        android:src="@drawable/ic_minus_vector"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/dividerContactRelation"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/contactRelation"
        android:layout_marginStart="@dimen/contact_padding_left"
        android:layout_marginEnd="@dimen/contact_padding_left"
        android:alpha="0.2"
        android:background="@drawable/divider_settings"
        android:contentDescription="@null" />

</RelativeLayout>
